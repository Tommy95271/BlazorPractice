@inherits PostBase

<div class="form-group">
    <div class="form-group">
        <label>更新時間</label>
        <input type="text" class="form-control" @bind="Post.CreateDateTime" @bind:format="yyyy-MM-dd hh:mm:ss" disabled />
    </div>
    <EditForm EditContext="editContext">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <label>Post Id:</label>
        <span class="w-25">@Post.PostId</span>
        <div class="form-group">
            <label for="title" style="@ColorStyle">標題</label>
            <input type="text" class="form-control" @bind="Post.Title" @bind:event="oninput" />
        </div>

        <div class="form-group">
            <label for="content">內容</label>
            <InputTextArea @bind-Value="Post.Content" id="content" class="form-control" rows="4"></InputTextArea>
        </div>
        <div class="form-group">
            <MyButton value="Submit" class="btn btn-primary" type="button" />
            <MyButton value="Reset" class="btn btn-dark" type="reset" />
            <input value="Delete" class="btn btn-danger" type="button" @onclick="returnPostId"/>
        </div>
    </EditForm>
</div>
