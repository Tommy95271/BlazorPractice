@page "/Post"
@inherits PostBase


<EditForm EditContext="editContext">
    <DataAnnotationsValidator />
    <ValidationSummary />
    @*<InputNumber @bind-Value="Post.Id" class="form-control w-25"></InputNumber>*@
    <div class="form-group">
        <label for="title">標題</label>
        <InputText @bind-Value="Post.Title" id="title" class="form-control w-25"></InputText>
    </div>

    <div class="form-group">
        <label for="content">內容</label>
        <InputTextArea @bind-Value="Post.Content" id="content" class="form-control w-25" rows="4"></InputTextArea>
    </div>
    <button type="submit" class="btn btn-info">Submit</button>
</EditForm>
